# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Python files
*.py text eol=lf
*.pyi text eol=lf
*.pyx text eol=lf

# Shell scripts
*.sh text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Docker
Dockerfile text eol=lf
Dockerfile.* text eol=lf
*.dockerfile text eol=lf

# SQL
*.sql text eol=lf

# Environment files
.env* text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Alembic
*.mako text eol=lf

# Binary files (no conversion)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pem binary
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.h5 binary
*.hdf5 binary
*.model binary
*.bin binary
